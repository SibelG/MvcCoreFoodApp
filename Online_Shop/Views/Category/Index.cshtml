@model List<Online_Shop.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>
<br/>

@using (Html.BeginForm()) {
    <p>
        Category Name:@Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>CategoryName</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var x in Model)
            {
<tr>
    <td>@x.CategoryId</td>
    <td>@x.CategoryName</td>
    <td>@x.Status</td>
    <td><a href="/Category/CategoryDelete/@x.CategoryId" class="btn btn-danger">Delete</a></td>
    <td><a href="/Category/CategoryGet/@x.CategoryId" class="btn btn-success">Update</a></td>
</tr>
            }
</table>
<a class="btn btn-primary" href="/Category/CategoryAdd">New Category</a>

