@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Online_Shop.Data.Models.Food>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food List</h1>
<br />

@using (Html.BeginForm())
{
    <p>
        Food Name:@Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>FoodName</th>
        <th>Price</th>
        <th>Stock Name</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.FoodId</th>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>
            <td><a href="/Food/DeleteFood/@x.FoodId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Food/FoodGet/@x.FoodId" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a class="btn btn-primary" href="/Food/FoodAdd/">New Food</a>


